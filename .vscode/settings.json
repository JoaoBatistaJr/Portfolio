{
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    //Configuração do tamnho da fonte
    "editor.fontSize": 16,
    "editor.lineHeight": 24,
    "editor.fontLigatures": true,

    //Aplica linhas verticais para lembrar  de quebrar linha em codigos muito grandes
    "editor.rulers": [
        80,
        120
    ],

    //Salva os arquivos depois de determinado tempo.
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10000,

    //Aplica um sinal visual a esquerda da linha selecionada
    "editor.renderLineHighlight": "gutter",

    //Aumenta a fonte do terminal
    "terminal.integrated.fontSize": 14,

    //Define o tema dos icones sidebar
    "workbench.iconTheme": "material-icon-theme",
    "python.jediEnabled": false,
    "editor.fontFamily": "Fira Code",

    "key": "alt+shift+f",  "command": "wwm.aligncode",
    "when": "editorTextFocus && !editorReadonly",
    "editor.hideCursorInOverviewRuler": true,
    "editor.foldingStrategy": "auto",

    "editor.wordWrap": "on",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "dart.flutterSdkPath": "C:\\src\\flutter",
    "workbench.colorTheme": "Dopamina Dark Theme",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "liveServer.settings.donotShowInfoMsg": true
}
{
    "editor.suggest.insertHighlight": true
}